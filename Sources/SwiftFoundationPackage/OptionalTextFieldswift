import SwiftUI

public struct OptionalTextField: View {
    public var title: String
    @Binding public var text: String
    
    public init(title: String, text: Binding<String>) {
        self.title = title
        self._text = text
    }
    
    public var body: some View {
        VStack{
            HStack{
                Text(title)
                    .font(.caption2)
                    .foregroundColor(.secondary)
                Spacer()
            }
            TextField(title, text: $text).clearButton(text: $text)
                
        }
    }
}
